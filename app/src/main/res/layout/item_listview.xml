<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="10dp"
		>

	<TextView
			android:id="@+id/id_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="16sp"
			android:text="Android 新技能"
			android:singleLine="true"
			android:textColor="#444"
			/>

	<TextView
			android:id="@+id/id_desc"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/id_title"
			android:layout_marginTop="10dp"
			android:minLines="1"
			android:maxLines="2"
			android:text="Android 打造万能的 listView 和 GridView 适配器"
			android:textColor="#898989"
			android:textSize="16sp"
			/>

	<TextView
			android:id="@+id/id_time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/id_desc"
			android:layout_marginTop="10dp"
			android:text="2014-12-12"
			android:textColor="#898989"
			android:textSize="12sp"
			/>

	<TextView
			android:id="@+id/id_phone"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/id_desc"
			android:layout_marginTop="10dp"
			android:text="10086"
			android:drawableLeft="@mipmap/ic_launcher"
			android:drawablePadding="5dp"
			android:padding="3dp"
			android:layout_alignParentRight="true"
			android:textColor="#fff"
			android:textSize="12sp"
			android:background="#2ED667"
			/>


</RelativeLayout>
